<div id="cube" class="cube">
    <div class="innercube"  id="innercube">
        <% if ( (typeof authanticate !== 'undefined') && authanticate === "true" ) { %>
             <% if ( (typeof error !== 'undefined') && error !== "" ) { %>
                <script>alert('')</script>
             <%}%>
            <div class="gamepanelcontainer">
                <div>
                                <h3>logged user : <%= authuser.username%></h3>
                            <h3>table : <%= tabledata.table_id%></h3>
                            <p>min bet: <%= tabledata.minamount%></p>
                            <p>max seat <%= tabledata.maxplayer%></p>
                            <div style="height:80px; width : 100;">
                            <p>game status : </p> <p id="gameinfotimer"></p>
                            </div>
                           
                </div>

                


                <div id="card-table" class="gameTableR" >
                    <div id = "housecards"  class="housecards">house</div>
                            
                            <%let recordCount = tabledata.maxplayer%>
                            <%let userfound = 0 %>
                            <% for (i = 1 ;i <= recordCount; i++) { %>
                                        <% userfound = 0 %>
                                        <% if ( (typeof gameusersession !== 'undefined') && gameusersession !== "" ) { %>               
                                            <% gameusercount = gameusersession.length  %>
                                            <% for (k = 0 ; k < gameusercount; k++) { %>
                                                <% if ( parseInt(gameusersession[k].seatnumber) === i) { %>  
                                                    <div id = "usertimer<%= i %>" class = "usertimer<%= i %>"><%= i %></div>
                                                    <div id = "user<%= i %>" class="gameTableUser<%= i %>">
                                                        username : <%= gameusersession[k].username %><br>
                                                        bet : 0

                                              
                                                     <% if ( parseInt(gameusersession[k].user_id) === authuser.userid) { %> 
                                                                
                                                                <button name="leave" id="leave<%= authuser.userid%>" style="color:white;background-color:#d65151;" type="button" onclick="leavegame('<%= authuser.userid%>','<%= gameusersession[k].gamesession_id %>');" class="btn btn-secondary btn-sm">Leave Game</button>
                                                                <button name="userac" id="call<%= authuser.userid%>" style="color:white;background-color:#3CB371;" type="button" onclick="callgame('<%= authuser.userid%>');" class="btn btn-secondary btn-sm">Call</button>
                                                                <button name="userac" id="raise<%= authuser.userid%>" style="color:white;background-color:#4B0082;" type="button" onclick="raisegame('<%= authuser.userid%>');" class="btn btn-secondary btn-sm">Raise 10</button>
                                                                <button name="userac" id="fold<%= authuser.userid%>" style="color:white;background-color:#d65151;" type="button" onclick="foldgame('<%= authuser.userid%>');" class="btn btn-secondary btn-sm">Fold</button>

                                                    <%}%>
                                                <% userfound = 1 %>
                                                 </div>
                                                  <div id = "card<%= i %>"  class="gameTableUserCard<%= i %>">caca</div>
                                                <% break %>
                                               
                                                <%}%>

                                            <%}%>
                                                <% if (userfound === 0 ) {%>
                                                 <div id = "usertimer<%= i %>" class = "usertimer<%= i %>"><%= i %></div>
                                                        <div id = "user<%= i %>" class="gameTableUser<%= i %>">
                                                           <%= i %>


                                                                    <button name="join" style="color:white;background-color:#3CB371;" type="button" onclick="joingame('<%= authuser.userid%>',<%= i %>,<%= JSON.stringify(tabledata) %>);" class="btn btn-secondary btn-sm">Join Game</button>
                                                              
                                                        </div>
                                                        <div id = "card<%= i %>"  class="gameTableUserCard<%= i %>">player <%= i %></div>
                                                <%}%>
                                    <%}else{%>
                                     <div id = "user<%= i %>" class="gameTableUser<%= i %>">
                                      <button name="join" id="join<%= i %>" style="color:white;background-color:#3CB371;" type="button" onclick="joingame('<%= authuser.userid%>',<%= i %>,<%= JSON.stringify(tabledata) %>);" class="btn btn-secondary btn-sm">Join Game</button>
                                      </div>
                                    <%}%>
         
                            <% } %>
                </div>

            </div>

        <%}%>
    </div>
</div>


