
<div id="cube" class="cube">
    <div class="innercube"  id="innercube">
        <div class="" style="color:black;">

            <div class="container">

                <div class="row">
                    <div class="col-2">
                        <div>

           
                        <% if (authuser.picture == 0  ) { %>
                          <img src="images/userimages/person.png" style="width:120px;height:120px">
                        <%}else{%>
                        <img src="images/userimages/<%= authuser.userid %>.<%= authuser.filetype %>"
                          style=" width:120px;height:120px">
                        <%}%>
           
          
                        </div>
                    </div>

                    <div class="col-6">
                        <div style="color:white;">
                            <strong>User: <%= authuser.username %></strong>
                        </div>
                    </div>

                    <div class="col-4">
                        <div>
                            <dl>
                                <h2>
                                    Statistics
                                </h2>
                                <dt>
                                    Top Players:
                                </dt>
                                <dt>
                                    Prizes:
                                </dt>
                                <dt>
                                    Total Available Tables:
                                </dt>
                                <dt>
                                    Total Player Online:
                                </dt>
                                <dt>
                                    Number of Registered Users:
                                </dt>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="row">
                    
                    <div class="card col-8" style="border-style:solid; color:black; min-width:300px; min-height:300px; max-width:10000; max-height:10000;">
                        <div class="card-body">
                            <h3 class="card-title;" style="text-decoration:underline"> Available tables: </h3>
                            <table style="width:100%; border: 1px solid black; text-align: center">
                                <tr>
                                    <th style="border: 1px solid black;">Table Name</th>
                                    <th style="border: 1px solid black;">Available Seats</th>
                                    <th style="border: 1px solid black;">Join</th>
                                </tr>

                                <% if ( (typeof result !== 'undefined') && result !== "" ) { %>
                                    <%  let recordCount = result.length 
                                        let i = 0;
                                    %>
                                    <% for (i = 0 ;i < recordCount; i++) { %>

                                        <tr style="border: 1px solid black;">
                                            <th>Table: <%= result[i].table_id %></th>
                                            <th>X</th>
                                            <th><a href="#" onclick="showgame(<%= result[i].table_id %>,'<%= JSON.stringify(authuser) %>');sendAuthInfoToSocket('<%= JSON.stringify(authuser) %>');setEnvForSocket(<%= JSON.stringify(result[i]) %>,'<%= authuser.userid%>', null);"> table <%= result[i].table_id %></a> Join</a></th>
                                        </tr>
                                    <% } %>
                                <%}else{%>
                                    <tr>
                                        <th>No tables are Available</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                <%}%>
                            </table>
                            <button type="button" class="btn btn-success">New Table</button>
                        </div>
                    </div>

                    <div class="col-4">
                        <div style="border-style:solid; background-color:black; border-radius: 12px;">
                            <div style="background-color:#225961; color:white; min-width:200px; min-height:300px; border-style: groove; border-radius: 12px;" id="chat">
                            Chat:
                            </div>
                            <div>
                                <input style="width:125px; height:30px;border-style: groove" type="text" id="chatinputbox">
                                <button style="width:50px; height:30px; border-radius: 12px;" id="sendMessage" placeholder="Send" onclick="sendMessage('<%= authuser.username%>');">Send</button>
                            </div>
                        </div>
                    </div>
                <div>

            <div>
        </div>
    </div>
</div>